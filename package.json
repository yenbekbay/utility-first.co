{
  "name": "utility-first.co",
  "private": true,
  "description": "",
  "license": "GPL-3.0",
  "sideEffects": false,
  "scripts": {
    "build": "run-s --silent build:*",
    "build:css": "pnpm run generate:css --minify",
    "build:next": "next build",
    "dev": "run-p --silent dev:*",
    "dev:css": "pnpm run generate:css --watch",
    "dev:next": "next dev",
    "generate:css": "tailwindcss -i ./global.css -o ./__generated__/tailwind.css",
    "lint": "eslint --ext .js,.ts,.tsx --cache .",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install",
    "start": "next start",
    "typecheck": "tsc --project . --noEmit"
  },
  "lint-staged": {
    "**/*.{js,ts,tsx,json,css,yml,yaml}": "prettier --write",
    "**/*.{js,ts,tsx}": "eslint --ext .js,.ts,.tsx --cache --fix"
  },
  "dependencies": {
    "next": "12.3.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-error-boundary": "3.1.4",
    "use-font-face-observer": "1.2.1"
  },
  "devDependencies": {
    "@tailwindcss/typography": "0.5.7",
    "@trivago/prettier-plugin-sort-imports": "3.3.0",
    "@types/node": "16.11.7",
    "@types/prettier": "2.7.1",
    "@types/react": "18.0.21",
    "@types/react-dom": "18.0.6",
    "@typescript-eslint/eslint-plugin": "5.38.0",
    "@typescript-eslint/parser": "^5.38.0",
    "eslint": "8.24.0",
    "eslint-config-next": "12.3.1",
    "eslint-plugin-eslint-comments": "3.2.0",
    "eslint-plugin-promise": "6.0.1",
    "eslint-plugin-tailwindcss": "3.6.2",
    "husky": "8.0.1",
    "lint-staged": "13.0.3",
    "npm-run-all": "4.1.5",
    "prettier": "2.7.1",
    "prettier-plugin-packagejson": "2.2.18",
    "tailwindcss": "3.1.8",
    "typescript": "4.8.3"
  },
  "engines": {
    "node": ">=16"
  },
  "pnpm": {
    "overrides": {
      "react": "18.2.0"
    }
  }
}
